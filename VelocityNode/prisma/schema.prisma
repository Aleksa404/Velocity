generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  TRAINER
  ADMIN
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
}

enum EnrollmentStatus {
  PENDING
  APPROVED
  DENIED
}

model User {
  id         String   @id @default(cuid())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  refreshTokens RefreshToken[]
  trainerRequests TrainerRequest[]
  following Follow[] @relation("UserFollows")
  followers Follow[] @relation("TrainerFollowers")
  workshopEnrollments WorkshopEnrollment[]
  videoWatchProgress VideoWatchProgress[]

  videos    Video[]
  workshops Workshop[]
}

model TrainerRequest {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    RequestStatus @default(PENDING)
  message   String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@unique([userId, status])
}

model Program {
  id          String  @id @default(cuid())
  title       String
  description String?
}

model Workshop {
  id          String   @id @default(cuid())
  title       String
  description String
  date        DateTime
  capacity    Int?     // Optional max participants
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trainerId String
  trainer   User    @relation(fields: [trainerId], references: [id])
  videos    Video[]
  enrollments WorkshopEnrollment[]
}

model Video {
  id         String   @id @default(cuid())
  title      String
  url        String
  duration   Int?     // Duration in seconds
  uploadedAt DateTime @default(now())

  trainerId  String
  trainer    User      @relation(fields: [trainerId], references: [id])
  workshopId String
  workshop   Workshop  @relation(fields: [workshopId], references: [id])
  
  watchProgress VideoWatchProgress[]
}

model VideoWatchProgress {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoId         String
  video           Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  
  // Progress tracking
  watchedSeconds  Int      @default(0)  // Current position in seconds
  totalDuration   Int?     // Total video duration (cached)
  percentWatched  Int      @default(0)  // 0-100
  
  // Status
  isCompleted     Boolean  @default(false)  // true when >95% watched
  
  // Timestamps
  lastWatchedAt   DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, videoId])
  @@index([userId, lastWatchedAt])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Follow {
  id        String   @id @default(cuid())
  userId    String   // The follower
  trainerId String   // The trainer being followed
  createdAt DateTime @default(now())

  user    User @relation("UserFollows", fields: [userId], references: [id], onDelete: Cascade)
  trainer User @relation("TrainerFollowers", fields: [trainerId], references: [id], onDelete: Cascade)

  @@unique([userId, trainerId])
}

model WorkshopEnrollment {
  id         String           @id @default(cuid())
  userId     String
  workshopId String
  status     EnrollmentStatus @default(PENDING)
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workshop Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  @@unique([userId, workshopId])
}
