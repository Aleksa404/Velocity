generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  TRAINER
  ADMIN
}

enum RequestStatus {
  PENDING
  APPROVED
  DENIED
}

model User {
  id         String   @id @default(cuid())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  refreshTokens       RefreshToken[]
  trainerRequests     TrainerRequest[]
  following           Follow[]             @relation("UserFollows")
  followers           Follow[]             @relation("TrainerFollowers")
  workshopEnrollments WorkshopEnrollment[]
  videoWatchProgress  VideoWatchProgress[]

  videos    Video[]
  workshops Workshop[]
}

model TrainerRequest {
  id        String        @id @default(cuid())
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  status    RequestStatus @default(PENDING)
  message   String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@unique([userId, status])
}

model Workshop {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  trainerId   String
  trainer     User                 @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  videos      Video[]
  sections    WorkshopSection[]
  enrollments WorkshopEnrollment[]

  @@index([trainerId])
  @@index([trainerId, createdAt])
}

model WorkshopSection {
  id         String   @id @default(cuid())
  title      String
  order      Int      @default(0)
  workshopId String
  workshop   Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)
  videos     Video[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([workshopId, order])
}

model WorkshopEnrollment {
  id         String        @id @default(cuid())
  userId     String
  workshopId String
  status     RequestStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workshop Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  @@unique([userId, workshopId])
  @@index([workshopId])
  @@index([userId, status])
  @@index([workshopId, status])
}

enum StorageType {
  LOCAL
  YOUTUBE
}

model Video {
  id          String      @id @default(cuid())
  title       String
  description String?
  url         String
  storageType StorageType @default(LOCAL)
  duration    Int? // Duration in seconds
  uploadedAt  DateTime    @default(now())

  trainerId  String
  trainer    User     @relation(fields: [trainerId], references: [id], onDelete: Cascade)
  workshopId String
  workshop   Workshop @relation(fields: [workshopId], references: [id], onDelete: Cascade)

  sectionId String?
  section   WorkshopSection? @relation(fields: [sectionId], references: [id])

  watchProgress VideoWatchProgress[]

  @@index([workshopId])
  @@index([sectionId])
  @@index([workshopId, uploadedAt])
}

model VideoWatchProgress {
  id      String @id @default(cuid())
  userId  String
  user    User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  videoId String
  video   Video  @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Progress tracking
  watchedSeconds Int  @default(0) // Current position in seconds
  totalDuration  Int? // Total video duration (cached)
  percentWatched Int  @default(0) // 0-100

  // Status
  isCompleted Boolean @default(false) // true when >95% watched

  // Timestamps
  lastWatchedAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, videoId])
  @@index([userId, lastWatchedAt])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Follow {
  id        String   @id @default(cuid())
  userId    String // The follower
  trainerId String // The trainer being followed
  createdAt DateTime @default(now())

  user    User @relation("UserFollows", fields: [userId], references: [id], onDelete: Cascade)
  trainer User @relation("TrainerFollowers", fields: [trainerId], references: [id], onDelete: Cascade)

  @@unique([userId, trainerId])
}

model SidebarSection {
  id        String        @id @default(cuid())
  title     String
  order     Int           @default(0)
  icon      String?
  path      String?
  roles     Role[]        @default([])
  items     SidebarItem[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model SidebarItem {
  id        String   @id @default(cuid())
  label     String
  icon      String // Lucide icon name
  path      String
  order     Int      @default(0)
  roles     Role[]   @default([])
  sectionId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  section SidebarSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
}
